<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.more1k.fragments.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/foto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/placeholder" />

        <TextView
            android:id="@+id/nome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="Promoção especial de férias"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="R$ 555,55" />

        <TextView
            android:id="@+id/descricao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:textStyle="italic"
            android:text="teste do texto da aapp que mostra o nome do pacote a ser vendido com varias linhas escritas com varios,teste do texto da aapp que mostra o nome do pacote a ser vendido com varias linhas escritas com varios,teste do texto da aapp que mostra o nome do pacote a ser vendido com varias linhas escritas com varios,teste do texto da aapp que mostra o nome do pacote a ser vendido com varias linhas escritas com varios,teste do texto da aapp que mostra o nome do pacote a ser vendido com varias linhas escritas com varios,teste do texto da aapp que mostra o nome do pacote a ser vendido com varias linhas escritas com varios,teste do texto da aapp que mostra o nome do pacote a ser vendido com varias linhas escritas com varios" />

        <Button
            android:id="@+id/comprar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/comprar"
            android:textColor="@color/abc_primary_text_material_dark"
            android:layout_marginBottom="20dp"
            android:background="@color/accent_material_light" />

    </LinearLayout>
</ScrollView>